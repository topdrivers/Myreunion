<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="20dip">





    <TextView
        android:id="@+id/activity_details_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"

        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/details_date_text"

        android:text="text1"
        android:textSize="26sp"
        android:textStyle="bold"



        />

    <TextView
        android:id="@+id/details_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_details_item_name"


        android:text = "Date : "

/>

    <TextView
        android:id="@+id/activity_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/details_date_text"
        app:layout_constraintTop_toBottomOf="@id/activity_details_item_name"


        android:text="text3"

        />

    <TextView
        android:id="@+id/activity_details_participants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"

        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/details_participants_text"

        app:layout_constraintTop_toBottomOf="@+id/activity_details_room"
        android:text="text2"

        />





    <TextView
        android:id="@+id/details_room_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/details_date_text"


        android:text = "Room : "

        />
    <TextView
        android:id="@+id/activity_details_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_details_date"
        app:layout_constraintStart_toEndOf="@+id/details_date_text"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:id="@+id/details_participants_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/details_room_text"


        android:text = "Participants : "

        />




</androidx.constraintlayout.widget.ConstraintLayout>